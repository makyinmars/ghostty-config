# Fonts
font-family = BerkeleyMono Nerd Font
font-size = 16

# Theme
theme = tokyonight

# Mouse
mouse-hide-while-typing = true

# Window
window-padding-balance = true
macos-titlebar-style = hidden
window-save-state = always
window-colorspace = "display-p3"

# keybindings
keybind = clear
keybind = shift+ctrl+h=goto_split:left
keybind = shift+ctrl+j=goto_split:bottom
keybind = shift+ctrl+k=goto_split:top
keybind = shift+ctrl+l=goto_split:right

keybind = super+shift+t=new_tab
keybind = super+shift+h=previous_tab
keybind = super+shift+l=next_tab
keybind = super+shift+comma=move_tab:-1
keybind = super+shift+period=move_tab:1

keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard

keybind = super+shift+a=new_split:down
keybind = super+shift+y=new_split:right

keybind = super+shift+n=toggle_quick_terminal

keybind = super+shift+f=toggle_fullscreen
keybind = super+shift+i=inspector:toggle
keybind = super+shift+m=toggle_split_zoom
keybind = super+shift+r=reload_config
keybind = super+shift+s=write_screen_file:open
keybind = super+shift+w=close_surface

# Other
copy-on-select = clipboard
quit-after-last-window-closed = true
