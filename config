
# Fonts
font-family = Berkeley Mono Variable
font-size = 16

# Theme
theme = Gruvbox Dark Hard

# Mouse
mouse-hide-while-typing = true

# Window
window-padding-balance = true
macos-titlebar-style = tabs
window-save-state = always
window-colorspace = "display-p3"
window-inherit-working-directory = true
window-inherit-font-size = true
window-new-tab-position = end

# Tmux-style keybindings (prefix: ctrl+l)
keybind = clear

# Splits (tmux-style with common remapping)
keybind = ctrl+l>v=new_split:right
keybind = ctrl+l>s=new_split:down

# Navigate splits (arrow keys)
keybind = ctrl+l>left=goto_split:left
keybind = ctrl+l>down=goto_split:bottom
keybind = ctrl+l>up=goto_split:top
keybind = ctrl+l>right=goto_split:right

# Navigate splits (vim-style - h/j/k only, use arrow for right)
keybind = ctrl+l>h=goto_split:left
keybind = ctrl+l>j=goto_split:bottom
keybind = ctrl+l>k=goto_split:top
keybind = ctrl+l>l=goto_split:right

# Tabs (tmux windows)
keybind = ctrl+l>c=new_tab
keybind = ctrl+l>n=next_tab
keybind = ctrl+l>p=previous_tab
keybind = ctrl+l>x=close_surface

# Quick tab switching by number
keybind = ctrl+l>1=goto_tab:1
keybind = ctrl+l>2=goto_tab:2
keybind = ctrl+l>3=goto_tab:3
keybind = ctrl+l>4=goto_tab:4
keybind = ctrl+l>5=goto_tab:5
keybind = ctrl+l>6=goto_tab:6
keybind = ctrl+l>7=goto_tab:7
keybind = ctrl+l>8=goto_tab:8
keybind = ctrl+l>9=goto_tab:9

# Zoom toggle
keybind = ctrl+l>z=toggle_split_zoom

# Quick terminal (like tmux detach)
keybind = ctrl+l>d=toggle_quick_terminal

# Reload config
keybind = ctrl+l>r=reload_config

# Selection and copy/paste
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard

# Other useful shortcuts
keybind = ctrl+l>f=toggle_fullscreen
keybind = ctrl+l>i=inspector:toggle
keybind = ctrl+l>w=write_screen_file:open
keybind = ctrl+l>shift+/=toggle_command_palette

# Custom shader
custom-shader = cursor_blaze.glsl
custom-shader-animation = true

# Other
copy-on-select = clipboard
quit-after-last-window-closed = true
